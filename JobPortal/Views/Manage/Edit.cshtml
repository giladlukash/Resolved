@model JobPortal.Models.ApplicationUser
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        @using (Html.BeginForm("Edit", "Manage", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
        {
            
            <h4>עדכון פרטים אישיים</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            
            <div class="form-group">
                שם מלא
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                שנות ניסיון
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Experience, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                מספר טלפון
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.PhoneNo, new { @class = "form-control" })
                </div>
            </div>
           
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="עדכן" />
                </div>
            </div>
        }

    </div>
</div>